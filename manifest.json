{
  "manifest_version": 3,
  "name": "Settings Checker",
  "version": "1.4",
  "description": "Checks website settings including Mirror functionality.",
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}